/* C- Parser Specification */

import java_cup.runtime.*;

parser code {:
    
    /* Change the method report_error so it will display the line and
       column of where the error occurred in the input as well as the
       reason for the error which is passed into the method in the
       String 'message'. */
    public void report_error(String message, Object info) {
   
        /* Create a StringBuffer called 'm' with the string 'Error' in it. */
        StringBuffer m = new StringBuffer("Error");
   
        /* Check if the information passed to the method is the same
           type as the type java_cup.runtime.Symbol. */
        if (info instanceof java_cup.runtime.Symbol) {
            /* Declare a java_cup.runtime.Symbol object 's' with the
               information in the object info that is being typecasted
               as a java_cup.runtime.Symbol object. */
            java_cup.runtime.Symbol s = ((java_cup.runtime.Symbol) info);
   
            /* Check if the line number in the input is greater or
               equal to zero. */
            if (s.left >= 0) {                
                /* Add to the end of the StringBuffer error message
                   the line number of the error in the input. */
                m.append(" in line "+(s.left+1));   
                /* Check if the column number in the input is greater
                   or equal to zero. */
                if (s.right >= 0)                    
                    /* Add to the end of the StringBuffer error message
                       the column number of the error in the input. */
                    m.append(", column "+(s.right+1));
            }
        }
   
        /* Add to the end of the StringBuffer error message created in
           this method the message that was passed into this method. */
        m.append(" : "+message);
   
        /* Print the contents of the StringBuffer 'm', which contains
           an error message, out on a line. */
        System.err.println(m);
    }
   
    /* Change the method report_fatal_error so when it reports a fatal
       error it will display the line and column number of where the
       fatal error occurred in the input as well as the reason for the
       fatal error which is passed into the method in the object
       'message' and then exit.*/
    public void report_fatal_error(String message, Object info) {
        report_error(message, info);
        System.exit(1);
    }

    /* Assume true at the start, but set to false with parsing errors */
    public static boolean valid = true;

:};

// Define the grammar for C-

/* Precedence and associativity rules */

/* Define terminal tokens */
terminal BOOL, IF, ELSE, INT, RETURN, VOID, WHILE, LOWER_THAN_ELSE;
terminal PLUS, MINUS, TIMES, DIVIDE, LT, GT, LTE, GTE, EQ, NEQ, TILDE, OR, AND, ASSIGN, SCOLON, COMMA;
terminal LPAREN, RPAREN, LSQUARE, RSQUARE, LCURLY, RCURLY, UMINUS;
terminal TRUTH, ID, NUM;
terminal ERR;

/* Define nonterminal tokens */
non terminal program, declaration_list, declaration, var_declaration, fun_declaration, type_specifier;
non terminal params, param_list, param, compound_stmt, local_declarations, statement_list, statement;
non terminal expression_stmt, selection_stmt, iteration_stmt, return_stmt, expression, var, simple_expression;
non terminal relop, additive_expression, addop, term, mulop, signed_factor, factor, call, args, arg_list;

/* Precedences */
precedence left OR;
precedence left AND;
precedence left EQ, NEQ;
precedence left LT, LTE, GT, GTE;
precedence left PLUS, MINUS;
precedence left TIMES, DIVIDE;
precedence right UMINUS;
precedence nonassoc LOWER_THAN_ELSE;
precedence nonassoc ELSE;

/* Start symbol */
start with program;


/* Grammar rules */
program ::= declaration_list 
          {: 
             System.out.println("DEBUG: Entered PROGRAM"); 
          :};

declaration_list ::= declaration_list declaration 
                   {: 
                      System.out.println("DEBUG: Adding declaration"); 
                   :} 
                   | declaration 
                   {: 
                      System.out.println("DEBUG: Single declaration processed"); 
                   :};

declaration ::= var_declaration 
              {: 
                 System.out.println("DEBUG: Parsed var_declaration"); 
              :} 
              | fun_declaration 
              {: 
                 System.out.println("DEBUG: Parsed fun_declaration"); 
              :};

var_declaration ::= type_specifier ID SCOLON 
                  {: 
                     System.out.println("DEBUG: Variable declaration: " + ((java_cup.runtime.Symbol)CUP$parser$stack.peek()).value); 
                  :} 
                  | type_specifier ID LSQUARE NUM RSQUARE SCOLON 
                  {: 
                     System.out.println("DEBUG: Array declaration: " + 
                     ((java_cup.runtime.Symbol)CUP$parser$stack.elementAt(CUP$parser$top-4)).value + 
                     "[" + ((java_cup.runtime.Symbol)CUP$parser$stack.elementAt(CUP$parser$top-2)).value + "]"); 
                  :};

fun_declaration ::= type_specifier ID LPAREN params RPAREN compound_stmt 
                  {: 
                     System.out.println("DEBUG: Function declared: " + ((java_cup.runtime.Symbol)CUP$parser$stack.elementAt(CUP$parser$top-4)).value); 
                  :};

type_specifier ::= BOOL 
                 {: System.out.println("DEBUG: Type BOOL"); :} 
                 | INT 
                 {: System.out.println("DEBUG: Type INT"); :} 
                 | VOID 
                 {: System.out.println("DEBUG: Type VOID"); :};

params ::= param_list 
         {: System.out.println("DEBUG: Parsed parameters"); :} 
         | VOID 
         {: System.out.println("DEBUG: Void parameter list"); :};

param_list ::= param_list COMMA param 
             {: System.out.println("DEBUG: Multiple parameters"); :} 
             | param 
             {: System.out.println("DEBUG: Single parameter"); :};

param ::= type_specifier ID 
        {: 
           System.out.println("DEBUG: Parameter: " + ((java_cup.runtime.Symbol)CUP$parser$stack.peek()).value); 
        :} 
        | type_specifier ID LSQUARE RSQUARE 
        {: 
           System.out.println("DEBUG: Array parameter: " + ((java_cup.runtime.Symbol)CUP$parser$stack.elementAt(CUP$parser$top-2)).value); 
        :};

compound_stmt ::= LCURLY local_declarations statement_list RCURLY 
                {: System.out.println("DEBUG: Entered compound statement"); :};

local_declarations ::= local_declarations var_declaration 
                     {: System.out.println("DEBUG: Local variable declaration"); :} 
                     | {: System.out.println("DEBUG: No local declarations"); :};

statement_list ::= statement_list statement 
                 {: System.out.println("DEBUG: Added statement"); :} 
                 | {: System.out.println("DEBUG: No statements in list"); :};

statement ::= expression_stmt 
            {: System.out.println("DEBUG: Parsed expression statement"); :} 
            | compound_stmt 
            {: System.out.println("DEBUG: Parsed compound statement"); :} 
            | selection_stmt 
            {: System.out.println("DEBUG: Parsed selection statement"); :} 
            | iteration_stmt 
            {: System.out.println("DEBUG: Parsed iteration statement"); :} 
            | return_stmt 
            {: System.out.println("DEBUG: Parsed return statement"); :};

expression_stmt ::= expression SCOLON 
                  {: System.out.println("DEBUG: Parsed an expression statement"); :} 
                  | SCOLON 
                  {: System.out.println("DEBUG: Empty expression statement"); :};

selection_stmt ::= IF LPAREN expression RPAREN statement 
                 {: System.out.println("DEBUG: Parsed IF statement"); :} 
                 | IF LPAREN expression RPAREN statement ELSE statement 
                 {: System.out.println("DEBUG: Parsed IF-ELSE statement"); :};

iteration_stmt ::= WHILE LPAREN expression RPAREN statement 
                 {: System.out.println("DEBUG: Parsed WHILE loop"); :};

return_stmt ::= RETURN SCOLON 
              {: System.out.println("DEBUG: Parsed RETURN statement without expression"); :} 
              | RETURN expression SCOLON 
              {: System.out.println("DEBUG: Parsed RETURN statement with expression"); :};

expression ::= var ASSIGN expression 
             {: System.out.println("DEBUG: Assignment statement"); :} 
             | simple_expression 
             {: System.out.println("DEBUG: Simple expression"); :};

var ::= ID 
      {: System.out.println("DEBUG: Variable "); :} 
      | ID LSQUARE expression RSQUARE 
      {: System.out.println("DEBUG: Array access " ); :};

simple_expression ::= additive_expression relop additive_expression 
                     {: System.out.println("DEBUG: Relational expression"); :} 
                     | additive_expression 
                     {: System.out.println("DEBUG: Additive expression"); :};

relop ::= LT 
        {: System.out.println("DEBUG: Parsed < operator"); :} 
        | LTE 
        {: System.out.println("DEBUG: Parsed <= operator"); :} 
        | GT 
        {: System.out.println("DEBUG: Parsed > operator"); :} 
        | GTE 
        {: System.out.println("DEBUG: Parsed >= operator"); :} 
        | EQ 
        {: System.out.println("DEBUG: Parsed == operator"); :} 
        | NEQ 
        {: System.out.println("DEBUG: Parsed != operator"); :};

additive_expression ::= additive_expression addop term 
                       {: System.out.println("DEBUG: Additive expression"); :} 
                       | term 
                       {: System.out.println("DEBUG: Term expression"); :};

addop ::= PLUS 
        {: System.out.println("DEBUG: Parsed PLUS operator"); :} 
        | MINUS 
        {: System.out.println("DEBUG: Parsed MINUS operator"); :};

term ::= term mulop signed_factor 
       {: System.out.println("DEBUG: Parsed term"); :} 
       | signed_factor 
       {: System.out.println("DEBUG: Parsed signed factor"); :};

mulop ::= TIMES 
        {: System.out.println("DEBUG: Parsed TIMES operator"); :} 
        | DIVIDE 
        {: System.out.println("DEBUG: Parsed DIVIDE operator"); :};

signed_factor ::= MINUS signed_factor %prec UMINUS 
                | factor 
                {: System.out.println("DEBUG: Parsed factor"); :};

factor ::= LPAREN expression RPAREN 
         {: System.out.println("DEBUG: Parenthesized expression"); :} 
         | var 
         {: System.out.println("DEBUG: Variable factor"); :} 
         | call 
         {: System.out.println("DEBUG: Function call factor"); :} 
         | NUM 
         {: System.out.println("DEBUG: Numeric constant "); :} 
         | TRUTH 
         {: System.out.println("DEBUG: Boolean constant "); :};

call ::= ID LPAREN args RPAREN 
       {: System.out.println("DEBUG: Function call: "); :};

args ::= arg_list 
       {: System.out.println("DEBUG: Arguments present"); :} 
       | {: System.out.println("DEBUG: No arguments"); :};

arg_list ::= arg_list COMMA expression 
           {: System.out.println("DEBUG: Multiple function arguments"); :} 
           | expression 
           {: System.out.println("DEBUG: Single function argument"); :};
